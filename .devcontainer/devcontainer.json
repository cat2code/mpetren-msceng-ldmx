{
  "name": "LDMX",
  "image": "ldmx/pro:v4.0.1",
  "workspaceFolder": "/workspaces/mpetren-msceng-ldmx",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/mpetren-msceng-ldmx,type=bind",
  "remoteEnv": {
    "PYTHONPATH": "/usr/local/python:${PYTHONPATH}"
  },
  "postCreateCommand": "echo 'source /workspaces/mpetren-msceng-ldmx/.venv/bin/activate' >> ~/.bashrc",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/bin/python3",
        "python.analysis.extraPaths": [
          "/usr/local/python"
        ]
      }
    }
  }
}
